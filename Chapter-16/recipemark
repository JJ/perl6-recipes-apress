#!/usr/bin/env raku

use lib <lib ../lib>;

use RecipeMark::Grammar;
use RecipeMark::Grammar::Actions;

use JSON::Fast;

multi sub MAIN( "check", $file where .IO.e ) {
    say to-json RecipeMark::Grammar.parse( $file.IO.slurp,
                   actions => RecipeMark::Grammar::Actions.new ).made;

}
